<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_announce_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_70"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:lines="3"
        android:text="Ya'll act like you never seen a white person before jaws all on the floor like Pam like Tommy just burst in the door started whoopin her ass worse than before"
        android:textColor="@color/black_text"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_announce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_announce_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-11-25"
        android:textColor="@color/gray6"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="@id/tv_announce_title"
        app:layout_constraintTop_toBottomOf="@id/tv_announce_title"
        />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slim Shady"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/black_text"
        app:layout_constraintStart_toEndOf="@id/tv_announce_time"
        app:layout_constraintTop_toTopOf="@id/tv_announce_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_announce_time"
        />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/bg_all"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/tv_announce_title"
        app:layout_constraintEnd_toEndOf="@id/iv_announce"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_announce_time"
        />

</androidx.constraintlayout.widget.ConstraintLayout>